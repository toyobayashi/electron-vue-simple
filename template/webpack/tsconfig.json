{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "../src/ts/@types",
      "../node_module/@types"
    ],
  },
  "include": [
    "./**/*",
    "../src/ts/**/*",
    "../src/vue/**/*"
  ]
}
